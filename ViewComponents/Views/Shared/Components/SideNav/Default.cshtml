@model ViewComponents.Models.MenuViewModel

<aside class="sidenav">
    <div class="user-panel">
        <div class="pull-left image">
            <img src="dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
        </div>
        <div class="pull-left info">
            <p>Alexander Pierce</p>
            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
        </div>
    </div>
    <!-- search form -->
    <form action="#" method="get" class="sidenav-form">
        <div class="input-group">
            <input type="text" name="q" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </form>
    <!-- /.search form -->
    <!-- sidenav menu: : style can be found in sidenav.less -->
    <ul class="sidenav-menu" data-widget="tree">
        <li class="header">
            @Model.Title
        </li>
        @foreach (var item in Model.SideNavItems)
        {
            <li class="menu">
                <a title="@item.Title" href="@Url.Action(item.Action, item.Controller)">
                    <i class="@item.IconClass"></i><span>@item.Text</span>
                    <span class="pull-right-container">
                        <i class="fa fa-angle-left pull-right"></i>
                    </span>
                </a>
                @if (item.SubNavItems != null)
                {
                    <ul  class="submenu">
                        @foreach (var subItem in item.SubNavItems)
                        {
                            <li><a href="@Url.Action(subItem.Action, subItem.Controller)"><i class="@subItem.IconClass"></i>@subItem.Text</a></li>   
                        }
                        </ul>
                }
            </li>
        }
    </ul>

</aside>